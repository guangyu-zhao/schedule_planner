# ==============================================================================
#  Schedule Planner — 环境配置文件模板
#  复制本文件为 .env，按需修改后重启服务即可生效。
#  cp .env.example .env
# ==============================================================================

# -------------------------------- 服务 ----------------------------------------
FLASK_ENV=development
FLASK_DEBUG=false
HOST=127.0.0.1
PORT=5555
HTTPS=0
LOG_LEVEL=INFO

# -------------------------------- 安全 ----------------------------------------
SECRET_KEY=

# -------------------------------- 数据库 (PostgreSQL) --------------------------
DATABASE_URL=postgresql://planner:plannerpass@localhost:5432/planner_db

# -------------------------------- Redis ----------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
RATELIMIT_STORAGE_URI=redis://localhost:6379/2
SESSION_KEY_PREFIX=sp_sess:

# -------------------------------- Sentry 监控 ---------------------------------
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=production

# -------------------------------- 限流 -----------------------------------------
MAX_LOGIN_ATTEMPTS=10
LOGIN_LOCKOUT_SECONDS=900

# -------------------------------- 邮件 ----------------------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@schedule-planner.com
MAIL_USE_TLS=true

# -------------------------------- 文件存储 ------------------------------------
# local = 本地文件系统 | oss = 阿里云 OSS
STORAGE_TYPE=local

# ── 本地存储 ──
UPLOAD_FOLDER=

# ── OSS 存储 ──
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_ENDPOINT=
OSS_BUCKET=
OSS_BASE_URL=
