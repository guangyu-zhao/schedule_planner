# ==============================================================================
#  Schedule Planner — 环境配置文件模板
#  复制本文件为 .env，按需修改后重启服务即可生效。
#  cp .env.example .env
# ==============================================================================

# -------------------------------- 服务 ----------------------------------------
FLASK_ENV=development
FLASK_DEBUG=false
HOST=127.0.0.1
PORT=5555
HTTPS=0
LOG_LEVEL=INFO

# -------------------------------- 安全 ----------------------------------------
SECRET_KEY=

# -------------------------------- 邮件 ----------------------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@schedule-planner.com
MAIL_USE_TLS=true

# -------------------------------- 文件存储 ------------------------------------
# local = 本地文件系统 | oss = 阿里云 OSS
STORAGE_TYPE=local

# ── 本地存储 ──
UPLOAD_FOLDER=

# ── OSS 存储 ──
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_ENDPOINT=
OSS_BUCKET=
OSS_BASE_URL=
